<%- model_class = Invoice -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:_id) %>:</strong></dt>
  <dd><%= @invoice._id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:invoice_no) %>:</strong></dt>
  <dd><%= @invoice.invoice_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:order_reference) %>:</strong></dt>
  <dd><%= @invoice.order_reference %></dd>
  <dt><strong><%= model_class.human_attribute_name(:order_date) %>:</strong></dt>
  <dd><%= @invoice.order_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @invoice.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subtotal) %>:</strong></dt>
  <dd><%= @invoice.subtotal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:discount) %>:</strong></dt>
  <dd><%= @invoice.discount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tax) %>:</strong></dt>
  <dd><%= @invoice.tax %></dd>
  <dt><strong><%= model_class.human_attribute_name(:grandtotal) %>:</strong></dt>
  <dd><%= @invoice.grandtotal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:note) %>:</strong></dt>
  <dd><%= @invoice.note %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              account_invoices_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_account_invoice_path(@invoice), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              account_invoice_path(@invoice),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
