<h1>Listing ratesheets</h1>
<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Hotel</th>
    <th>roomtype</th>
    <th>roomrate</th>
    <th>period</th>
    <th></th>
  </tr>

<% @ratesheets.each do |ratesheet| %>
  <tr>
    <td><%= ratesheet.hotel.name1 %></td>
    <td><%= ratesheet.roomtype.name %></td>
    <td><%= ratesheet.roomrate.name %></td>
    <td><%= ratesheet.period.name %></td>
    <td><%= link_to "<i class=\"icon-zoom-in\"></i>Show".html_safe, [:admin,ratesheet] ,class: 'btn btn-small pull-right' %>
    <%= link_to "<i class=\"icon-pencil\"></i>Edit".html_safe,  edit_admin_ratesheet_path(ratesheet) ,class: 'btn btn-small pull-right' %>
    <%= link_to "<i class=\"icon-trash\"></i>Destroy".html_safe, [:admin,ratesheet],class: 'btn btn-small pull-right', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

