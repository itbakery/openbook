<h1>Listing roomrates</h1>

<table class="table table-striped table-bordered table-condensed">

  <tr>
    <th>Name</th>
    <th>Occupancy</th>
    <th>Description</th>
    <th></th>
  </tr>

<% @roomrates.each do |roomrate| %>
  <tr>
    <td><%= roomrate.name %></td>
    <td><%= roomrate.occupancy %></td>
    <td><%= roomrate.description %></td>
    <td><%= link_to "<i class=\"icon-zoom-in\"></i>Show".html_safe, [:admin,roomrate] , class: 'btn btn-small pull-right'%>
    <%= link_to "<i class=\"icon-pencil\"></i>Edit".html_safe, edit_admin_roomrate_path(roomrate), class: 'btn btn-small pull-right' %>
    <%= link_to "<i class=\"icon-trash\"></i>Destroy".html_safe, [:admin,roomrate],class: 'btn btn-small pull-right', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Roomrate', new_admin_roomrate_path %>
