 <ul class="nav nav-tabs">
  <li class="active"><a href="#hotel" data-toggle="tab">Hotel Infomation</a></li>
  <li><a href="#allrate" data-toggle="tab">All RateSheets</a></li>
  <li><a href="#viewratesheet" data-toggle="tab">View RateSheet</a></li>
  <li><a href="#ratesheet" data-toggle="tab">Add RateSheet</a></li>
</ul>

<div class="tab-content">
  <div class="tab-pane active" id="hotel">
    <%= render partial: 'hotelform' %>
  </div>
  <div class="tab-pane" id="allrate">
    <table class="t1">
      <tbody>
        <tr>
        <th> Ratesheet Name </th>
        <th> Hotel </td>
        <th > Roomtype </th>
        <th> Roomrate </th>
        <th>  Period  </th>
        <th> Control  </th>
      </tr>
      <%= render partial: "listratesheet", collection: @hotel.ratesheets, as: :ratesheet %>
    </tbody>
    </table>
  </div>
  <!------- ratesheet ------>
  <div class="tab-pane" id="ratesheet">
    <div id="ratesheetholder">
      <% @ratesheet = @hotel.ratesheets.build %>
      <% unless @hotel.id.nil? %>
        <%= render :partial => 'ratesheet', object:  @ratesheet %>
      <% end %>
      <table class="t1">
        <tr>
          <td style="width: 10%">#No</td>
          <td style="width: 20%">Date</td>
          <td style="width: 20%">DayofMonth</td>
          <td style="width: 10%">Min-stay</td>
          <td style="width: 10%">price</td>
          <td style="width: 30%">Message</td>
          <td style="width: 10%">Active?</td>
        </tr>
      </table>

    </div>
    <div id="pricesheetholder" ></div>
  </div>
  <!------- viewratesheet ------->
  <div class="tab-pane" id="viewratesheet">
    <div id="viewsheetholder">
    </div>
  </div>

</div
