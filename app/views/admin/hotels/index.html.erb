<h1>Listing hotels
  <%= link_to "<i class=\"icon-plus-sign\"></i>Add Hotel".html_safe, new_admin_hotel_path, class: "btn pull-right" %>
</h1>


 <table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Logo</th>
    <th>Name1</th>
    <th>Address1</th>
    <th>Street</th>
    <th>Province</th>
    <th>Country</th>
    <th>Star</th>
    <th>Isactive</th>
    <th></th>
  </tr>

<% @hotels.each do |hotel| %>
  <tr>
    <td><%=  show_tiny_logo(hotel.logo) %></td>
    <td><%= hotel.name1 %></td>
    <td><%= hotel.address1 %></td>
    <td><%= hotel.street %></td>
    <td><%= hotel.province.name %></td>
    <td><%= hotel.country %></td>
    <td><%= hotel.star %></td>
    <td><%= hotel.isactive %></td>
    <td><%= link_to "<i class=\"icon-zoom-in\"></i>Show".html_safe, [:admin,hotel],class: 'btn btn-small pull-right' %>
    <%= link_to "<i class=\"icon-pencil\"></i>Edit".html_safe, edit_admin_hotel_path(hotel),class: 'btn btn-small pull-right' %>
   <%= link_to "<i class=\"icon-trash\"></i>Destroy".html_safe, [:admin,hotel],class: 'btn btn-small pull-right', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

