<% if @hotel %>
  <%= form_for([:admin,@hotel], html: {class: "well form-horizontal", remote: true}) do |f| %>
    <% if @hotel.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@hotel.errors.count, "error") %> prohibited this hotel from being saved:</h2>

        <ul>
          <% @hotel.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="control-group">
      <%= f.label :country , class: "control-label"%>
      <div class="controls">
        <%= f.collection_select :country_id, Country.all.to_a, :id, :name, include_blank: true %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :province , class: "control-label"%>
      <div class="controls">
        <%= f.grouped_collection_select :province_id, Country.all.to_a, :provinces, :name, :id, :name, include_blank: true %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :zone , class: "control-label"%>
      <div class="controls">
        <%= f.grouped_collection_select :zone_id, Province.all.to_a, :zones, :name, :id, :name, include_blank: true %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label"> Name (Eng) </label>
      <div class="controls">
        <%= f.text_field :name1 %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"> Name (Thai) </label>
      <div class="controls">
        <%= f.text_field :name2 %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"> Address1 </label>
      <div class="controls">
        <%= f.text_field :address1 %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"> Address2 </label>
      <div class="controls">
        <%= f.text_field :address2 %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"> Street </label>
      <div class="controls">
        <%= f.text_field :street %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"> Postal </label>
      <div class="controls">
        <%= f.text_field :postal %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"> Telephone </label>
      <div class="controls">
        <%= f.text_field :telephone %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"> Fax </label>
      <div class="controls">
        <%= f.text_field :fax %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label"> Email </label>
      <div class="controls">
        <%= f.text_field :email %>
      </div>
    </div>
    <div class="form-actions">
        <%= f.submit 'add hotel', class: 'btn' %>
    </div>
  <% end %>
<% end %>
