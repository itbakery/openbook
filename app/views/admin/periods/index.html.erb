<h1>Listing periods</h1>
<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Hotel</th>
    <th>Name</th>
    <th>Valid from</th>
    <th>Valid to</th>
    <th>Isactive</th>
    <th></th>
  </tr>

<% @periods.each do |period| %>
  <tr>
    <td><%= period.hotel.name1 %></td>
    <td><%= period.name %></td>
    <td><%= period.valid_from.strftime('%a, %b %d, %Y') rescue nil %></td>
    <td><%= period.valid_to.strftime('%a, %b %d, %Y') rescue nil %></td>
    <td><%= period.isactive %></td>
    <td><%= link_to "<i class=\"icon-zoom-in\"></i>Show".html_safe, [:admin,period], class: 'btn btn-small pull-right' %>
    <%= link_to "<i class=\"icon-pencil\"></i>Edit".html_safe, edit_admin_period_path(period), class: 'btn btn-small pull-right' %>
  <%= link_to "<i class=\"icon-trash\"></i>Destroy".html_safe, [:admin,period],class: 'btn btn-small pull-right' , method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

