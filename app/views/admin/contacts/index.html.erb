<h1>Listing contacts</h1>


<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Position</th>
    <th>Telephone</th>
    <th>Email</th>
    <th></th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%= contact.name %></td>
    <td><%= contact.position %></td>
    <td><%= contact.telephone %></td>
    <td><%= contact.email %></td>
    <td><%= link_to "<i class=\"icon-zoom-in\"></i>Show".html_safe,  [:admin,contact],class: 'btn btn-small pull-right' %>
    <%= link_to "<i class=\"icon-pencil\"></i>Edit".html_safe, edit_admin_contact_path(contact),class: 'btn btn-small pull-right' %>
    <%= link_to "<i class=\"icon-trash\"></i>Destroy".html_safe, [:admin,contact],class: 'btn btn-small pull-right', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Contact', new_admin_contact_path %>
