<h1>Listing zones</h1>

 <table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Isactive</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @zones.each do |zone| %>
  <tr>
    <td><%= zone.name %></td>
    <td><%= zone.description %></td>
    <td><%= zone.isactive %></td>
    <td><%= link_to "<i class=\"icon-zoom-in\"></i>Show".html_safe, [:admin,zone], class: 'btn btn-small pull-right' %>
    <%= link_to "<i class=\"icon-pencil\"></i>Edit".html_safe, edit_admin_zone_path(zone),class: 'btn btn-small pull-right' %>
    <%= link_to "<i class=\"icon-trash\"></i>Destroy".html_safe, [:admin,zone], class: 'btn btn-small pull-right', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

