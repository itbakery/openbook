<h1>Listing currencies
  <%= link_to "<i class=\"icon-plus-sign\"></i>Add currency".html_safe, new_admin_currency_path, class: "btn pull-right" %>
</h1>


 <table class="table table-striped table-bordered table-condensed">

  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Code</th>
    <th>Rate</th>
    <th>Icon</th>
    <th></th>
  </tr>

<% @currencies.each do |currency| %>
  <tr>
    <td><%= currency.name %></td>
    <td><%= currency.description %></td>
    <td><%= currency.code %></td>
    <td><%= currency.rate %></td>
    <td><%= currency.icon %></td>
    <td>
      <%= link_to "<i class=\"icon-pencil\"></i>Edit".html_safe, edit_admin_currency_path(currency) ,class: 'btn btn-small pull-right'%>
    <%= link_to "<i class=\"icon-trash\"></i>Destroy".html_safe, [:admin,currency],class: 'btn btn-small pull-right', method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to "<i class=\"icon-zoom-in\"></i>Show".html_safe , [:admin,currency],class: 'btn btn-small pull-right' %>
  </td>
  </tr>
<% end %>
</table>

<br />

