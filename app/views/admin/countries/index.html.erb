<h1>Listing countries</h1>

 <table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Isactive</th>
    <th></th>
  </tr>

<% @countries.each do |country| %>
  <tr>
    <td><%= country.name %></td>
    <td><%= country.description %></td>
    <td><%= country.isactive %></td>
    <td><%= link_to "<i class=\"icon-zoom-in\"></i>Show".html_safe, [:admin,country],class: 'btn btn-small pull-right' %>
    <%= link_to "<i class=\"icon-pencil\"></i>Edit".html_safe, edit_admin_country_path(country),class: 'btn btn-small pull-right' %>
    <%= link_to "<i class=\"icon-trash\"></i>Destroy".html_safe, [:admin,country],class: 'btn btn-small pull-right', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Country', new_admin_country_path %>
