<h1>Listing provinces</h1>

 <table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Isactive</th>
    <th></th>
  </tr>

<% @provinces.each do |province| %>
  <tr>
    <td><%= province.name %></td>
    <td><%= province.description %></td>
    <td><%= province.isactive %></td>
    <td><%= link_to "<i class=\"icon-zoom-in\"></i>Show".html_safe, [:admin,province],class: 'btn btn-small pull-right' %>
    <%= link_to "<i class=\"icon-pencil\"></i>Edit".html_safe, edit_admin_province_path(province),class: 'btn btn-small pull-right' %>
    <%= link_to "<i class=\"icon-trash\"></i>Destroy".html_safe, [:admin,province],class: 'btn btn-small pull-right', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Province', new_admin_province_path %>
