<h1>Listing roomtypes</h1>
<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Roomid</th>
    <th>Description</th>
    <th>Allotment</th>
    <th>Cutoffdate</th>
    <th>Sold</th>
    <th>Roomfunction</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @roomtypes.each do |roomtype| %>
  <tr>
    <td><%= roomtype.name %></td>
    <td><%= roomtype.roomid %></td>
    <td><%= roomtype.description %></td>
    <td><%= roomtype.allotment %></td>
    <td><%= roomtype.cutoffdate %></td>
    <td><%= roomtype.sold %></td>
    <td><%= roomtype.roomfunction %></td>
    <td><%= link_to "<i class=\"icon-zoom-in\"></i>Show".html_safe, [:admin,roomtype] , class: 'btn btn-small pull-right' %>
    <td><%= link_to "<i class=\"icon-pencil\"></i>Edit".html_safe, edit_admin_roomtype_path(roomtype), class: 'btn btn-small pull-right' %>
    <td><%= link_to "<i class=\"icon-trash\"></i>Destroy".html_safe,  [:admin,roomtype],class: 'btn btn-small pull-right' , method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

