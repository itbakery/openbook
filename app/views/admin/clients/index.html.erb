<h1>Listing clients
  <%= link_to "<i class=\"icon-plus-sign\"></i>Add Client".html_safe, new_admin_client_path, class: "btn pull-right" %>
</h1>

 <table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Isactive</th>
    <th></th>
  </tr>

<% @clients.each do |client| %>
  <tr>
    <td><%= client.name %></td>
    <td><%= client.description %></td>
    <td><%= client.isactive %></td>
    <td>
      <%= link_to "<i class=\"icon-pencil\"></i>Edit".html_safe, edit_admin_client_path(client),class: 'btn btn-small pull-right'  %>
      <%= link_to "<i class=\"icon-trash\"></i>Destroy".html_safe, [:admin,client],class: 'btn btn-small pull-right' , method: :delete, data: { confirm: 'Are you sure?'  } %>
      <%= link_to "<i class=\"icon-zoom-in\"></i>Show".html_safe, [:admin,client], class: 'btn btn-small pull-right' %>
    </td>
  </tr>
<% end %>
</table>

<br />


